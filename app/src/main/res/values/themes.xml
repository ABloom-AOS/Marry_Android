<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Mery" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="bottomSheetDialogTheme">@style/RoundBottomSheetDialogStyle</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
    </style>

    <style name="Theme.Mery" parent="Base.Theme.Mery" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#ECE2F2</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_dummy</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.Mery</item>
    </style>

</resources>
